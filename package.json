{
	"name": "storybook-helper",
	"displayName": "Storybook helper",
	"description": "Quickly create Storybook's stories for your React components",
	"version": "1.2.0",
	"publisher": "riccardoforina",
	"engines": {
		"vscode": "^1.60.0"
	},
	"icon": "storybook.ico",
	"repository": {
		"type": "git",
		"url": "https://github.com/riccardo-forina/storybook-vscode-helper"
	},
	"homepage": "https://github.com/riccardo-forina/storybook-vscode-helper/blob/main/README.md",
	"bugs": {
		"url": "https://github.com/riccardo-forina/storybook-vscode-helper/issues",
		"email": "riccardo@forina.eu"
	},
	"categories": [
		"Snippets",
		"Programming Languages"
	],
	"activationEvents": [
		"onCommand:storybook-helper.createStory"
	],
	"main": "./out/main.js",
	"contributes": {
		"commands": [
			{
				"command": "storybook-helper.createStory",
				"title": "Create a Storybook story"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "storybook-helper.createStory",
					"when": "editorLangId == typescriptreact || editorLangId == javascriptreact || editorLangId == typescript || editorLangId == javascript"
				}
			]
		},
		"snippets": [
			{
				"language": "typescriptreact",
				"path": "./snippets/typescript.json"
			},
			{
				"language": "typescript",
				"path": "./snippets/typescript.json"
			},
			{
				"language": "javascriptreact",
				"path": "./snippets/javascript.json"
			},
			{
				"language": "javascript",
				"path": "./snippets/javascript.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run esbuild-base --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "yarn run esbuild-base --sourcemap",
		"watch": "yarn run esbuild-base --sourcemap --watch",
		"test-compile": "tsc -p ./",
		"pretest": "yarn run esbuild && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"esbuild": "^0.12.28",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"react-docgen-typescript": "^2.1.0"
	}
}